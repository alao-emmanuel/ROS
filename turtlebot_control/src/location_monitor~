#include "ros/ros.h"

#include "nav_msgs/Odometry"


void OdomCallback(const nav_msgs::Odometry::ConstPtr& msg){
	double x = msgs->pose.pose.position.x;
	double y = msgs->pose.pose.position.y;

	ROS_INFO("x: %f, y: %f", x, y);
	ROS_DEBUG("x: %f, y: %f", x, y);
	ROS_WARN("x: %f, y: %f", x, y);
	ROS_ERROR("x: %f, y: %f", x, y);
	ROS_FATAL("x: %f, y: %f", x, y);

}

int main(int argc, char** argv){
	ros::init(argc, argv, "location_monitor");
	ros::NodeHandle nh;
	ros::Subscriber sub = nh.subscriber("odom",10, OdomCallback);
	ros::spin();
	return 0;

}
